@{
    ViewData["Title"] = "Home Page";
}

<body id="Index">

    <section class="Block">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="8000">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
            </ol>

            <div class="carousel-inner" role="listbox">
                <div class="item active">

                    <img src="~/images/Hands.jpg" alt="Home Improvement Tracker" class="img-responsive" />

                    <div class="carousel-caption" role="option">
                        <h1>Home Improvement Tracker</h1>
                        <p>
                            Welcome to Home Improvement Tracker. We provide users with a platform to save all their
                            projects in a one-stop-shop format.
                            <a href="/Home/About" class="btn btn-default">Learn More</a>
                        </p>
                    </div>
                </div>
                <div class="item">

                    <img src="~/images/People.jpeg" alt="Home Improvement Tracker" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <h1>Home Improvement Tracker</h1>
                        <p>
                            Dedicated to making sure your experience is pleasurable with a simple
                            user interface tailored to entering information on the go.
                            <a href="/Home/About" class="btn btn-default">Learn More</a>
                        </p>
                    </div>
                </div>
                <div class="item">

                    <img src="~/images/People2.jpg" alt="Home Improvement Tracker" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <h1>Home Improvement Tracker</h1>
                        <p>
                            We aid our users in their endeavors by providing links to websites for DIY instructions
                            and contractors within the local area.
                            <a href="/Home/Resource" class="btn btn-default">Learn More</a>
                        </p>
                    </div>
                </div>
                <div class="item">

                    <img src="~/images/beforeAfter.jpg" alt="Home Improvement Tracker" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <h1>Home Improvement Tracker</h1>
                        <p>
                            Not sure where to begin? Check out our Resources page to gain
                            insight on the direction of your renovation.
                            <a href="/Home/Resource" class="btn btn-default">Learn More</a>
                        </p>
                    </div>
                </div>
                <div class="item">



                    <img src="~/images/Simple.jpg" alt="Home Improvement Tracker" class="img-responsive" />
                    <div class="carousel-caption" role="option">
                        <h1>Home Improvement Tracker</h1>
                        <p>
                            Stop taking precious time away from your work by doing it the old fashioned way.
                            Don't wait any longer. Register today!
                            <a href="/Identity/Account/Register?returnUrl=%2F" class="btn btn-default">Register</a>
                        </p>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>


</body>

@model HitApp.Models.Contractor

@{
    ViewData["Title"] = "Details";
}
@section Styling{
    <link href="~/css/Creates.css" rel="stylesheet" />
    <link href="~/css/Contractors.css" rel="stylesheet" />
}
<h2>@Model.ContractorName</h2>

<div class="back">
    <a asp-controller="Contractors" asp-action="Index">
        <input type="button" value="Back to All Contractors" class="btn btn-default" />
    </a>
</div>

<div>
    <div class="d-contractor">
        <div>
            <dl id="contractor" class="dl-horizontal">

                <dt class="d-row">
                    Company:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorCompany)
                </dd>

                <dt class="d-row">
                    Name:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorName)
                </dd>
                <dt class="d-row">
                    Service:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorService)
                </dd>
                <dt class="d-row">
                    Email:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorEmail)
                </dd>
                <dt class="d-row">
                    Phone:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorPhone)
                </dd>
                <dt class="d-row">
                    Website:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorWebsiteUrl)
                </dd>
                <dt class="d-row">
                    Address:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorAddress)
                </dd>
                <dt class="d-row">
                    City:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorCity)
                </dd>
                <dt class="d-row">
                    State:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorState)
                </dd>
                <dt class="d-row">
                    Zip Code:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorZip)
                </dd>
                <dt class="d-row">
                    Additional Notes:
                </dt>
                <dd class="d-row">
                    @Html.DisplayFor(model => model.ContractorAdditionalNotes)
                </dd>
            </dl>
            <div class="buttons">
                <a asp-action="Edit" asp-route-id="@Model.ContractorId" title="Edit"><i class="far fa-edit"></i></a> |
                <a asp-action="/Delete" asp-route-id="@Model.ContractorId" title="Delete"><i class="fas fa-times"></i></a>
            </div>
        </div>

        <div>
            <div id="assigned-project">
                <h3>Assigned Projects</h3>
                <ul class="d-row">
                    @if (Model.ProjectContractors.Count == 0)
                    {
                        <li>Not assigned to any projects</li>
                    }
                    else
                    {
                        foreach (var project in Model.ProjectContractors)
                        {
                            <li id="proj-cont"><a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Projects.ProjectId">@project.Projects.ProjectName</a></li>
                        }
                    }
                </ul>

            </div>

        </div>
    </div>

</div>


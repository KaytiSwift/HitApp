@model HitApp.Models.Project

@{
    ViewData["Title"] = "Create";
}
@section Styling{
    <link href="~/css/Creates.css" rel="stylesheet" />
    <link href="~/css/Projects.css" rel="stylesheet" />
}
<body id="ProjectIndex">

    <div class="back" id="go-to">
        <a asp-controller="Projects" asp-action="Index">
            <input type="button" value="BACK TO MY PROJECTS" class="btn btn-default" />
        </a>
    </div>
    <div class="cards">
        <h2>Create A New Project</h2>



        <div class="row">
            <div class="col-md-4">
                <form class="page-form" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="ProjectName" class="control-label"></label>
                        <input asp-for="ProjectName" class="form-control" />
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectTotalBudget" class="control-label"></label>
                        <input asp-for="ProjectTotalBudget" class="form-control" />
                        <span asp-validation-for="ProjectTotalBudget" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectIsOnDashboard" class="control-label"></label>
                        <input type="checkbox" asp-for="ProjectIsOnDashboard" />
                        <span asp-validation-for="ProjectIsOnDashboard" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProjectStartDate" class="control-label"></label>
                        <input asp-for="ProjectStartDate" class="form-control" />
                        <span asp-validation-for="ProjectStartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProjectEndDate" class="control-label"></label>
                        <input asp-for="ProjectEndDate" class="form-control" />
                        <span asp-validation-for="ProjectEndDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ProjectDescription" class="control-label"></label>
                        <textarea id="add-info" asp-for="ProjectDescription" class="form-control"></textarea>
                        <span asp-validation-for="ProjectDescription" class="text-danger"></span>
                    </div>

                    <div id="create-proj" class="form-group">
                        <input style="font-weight:bold;" type="submit" value="CREATE" class="btn btn-default" />

                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

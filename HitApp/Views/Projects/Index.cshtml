@model IEnumerable<HitApp.Models.Project>

@{
    ViewData["Title"] = "Index";
}
@section Styling{
    <link href="~/css/Indexes.css" rel="stylesheet" />
}
<h2>All Projects</h2>
<a asp-controller="Contractors" asp-action="Index">View All Contractors</a>


<p>
    <a asp-action="Create"><i class="far fa-plus-square"></i> New Project</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.ProjectDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectIsOnDashboard)
            </th>            

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            
            <td class="desc">
                @item.ProjectDescription

            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ProjectStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectEndDate)
            </td>
            @if (item.ProjectIsOnDashboard == true)
            {
                <td><i class="far fa-check-circle"></i></td>
            }
            else
            {
                <td><i class="fas fa-ban"></i></td>
            }

            <td>

                <a asp-action="Details" asp-route-id="@item.ProjectId" title="Details"><i class="far fa-list-alt"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectId" title="Delete"><i class="fas fa-times"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
